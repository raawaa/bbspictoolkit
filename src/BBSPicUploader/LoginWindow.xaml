<Window x:Class="BBSPicUploader.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BBSPicUploader" Height="240" Width="320" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" KeyUp="Window_KeyUp" ResizeMode="NoResize">
    <Grid>
        <Label Content="饮水思源" Height="44" HorizontalAlignment="Left" Margin="85,0,0,0" Name="lblBBS" VerticalAlignment="Top" Width="120" FontSize="28" />
        <Label Content="账号：" Height="28" HorizontalAlignment="Left" Margin="64,60,0,0" Name="lblUserName" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="108,60,0,0" Name="cmbUsername" VerticalAlignment="Top" Width="120" IsEditable="True" />
        <Label Content="密码：" Height="28" HorizontalAlignment="Left" Margin="64,104,0,0" Name="lblPassword" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="109,104,0,0" Name="txtPassword" VerticalAlignment="Top" Width="120" KeyUp="txtPassword_KeyUp" />
        <Button Content="登录" Height="23" HorizontalAlignment="Left" Margin="109,157,0,0" Name="btnLogin" VerticalAlignment="Top" Width="75" Click="btnLogin_Click" />      
    </Grid>
</Window>
