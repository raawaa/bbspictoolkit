<Window x:Class="BBSPicUploader.Preview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="预览" Height="500" Width="720" WindowStartupLocation="CenterScreen" ContentRendered="Window_ContentRendered">
    <Grid>
        <Label Content="板面：" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="64,12,0,0" Name="cmbBoard" VerticalAlignment="Top" Width="120" IsEditable="True" />
        <Label Content="标题：" Height="28" HorizontalAlignment="Left" Margin="190,12,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="242,12,0,0" Name="txtTitle" VerticalAlignment="Top" Width="444" />
        <TextBox Height="360" HorizontalAlignment="Left" Margin="12,46,0,0" Name="txtContent" VerticalAlignment="Top" Width="674" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />
        <Button Content="发帖" Height="23" HorizontalAlignment="Left" Margin="12,418,0,0" Name="btnPost" VerticalAlignment="Top" Width="75" Click="btnPost_Click" />
    </Grid>
</Window>
